<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:animateLayoutChanges="true">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_gravity="right|bottom"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:layout_marginRight="20sp"
        android:id="@+id/fab"/>

    <LinearLayout
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10sp"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            android:id="@+id/llforoptions"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#55A8BA">
            <EditText
                android:id="@+id/payeeorpayer_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Payee/payer name"
                android:textColor="#fff"
                android:textColorHint="#eee"
                android:backgroundTint="#fff"
                android:maxLines="1"
                android:singleLine="true"/>
            <EditText
                android:id="@+id/name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Money lent/borrowed for..."
                android:textColor="#fff"
                android:textColorHint="#eee"
                android:backgroundTint="#fff"
                android:maxLines="1"
                android:singleLine="true"/>
            <EditText
                android:id="@+id/amt_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Amount in Rs"
                android:textColor="#fff"
                android:textColorHint="#eee"
                android:backgroundTint="#fff"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionDone"/>
            <TextView
                android:paddingLeft="5sp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Did you borrow or lend?"/>
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/borrowed_rb"
                    android:padding="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Borrowed"
                    android:textColor="#fff"
                    android:buttonTint="#fff"/>
                <RadioButton
                    android:id="@+id/lent_rb"
                    android:padding="5sp"
                    android:layout_marginLeft="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lent"
                    android:textColor="#fff"
                    android:buttonTint="#fff"/>
            </RadioGroup>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:background="@drawable/btn_rounded"
                    android:id="@+id/savebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true" />
                <Button
                    android:background="@drawable/btn_rounded"
                    android:id="@+id/cancelbtn"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textAllCaps="false"/>
            </RelativeLayout>

        </LinearLayout>
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconifiedByDefault="false"
            app:queryHint="Search for the name of payee/payer">

        </androidx.appcompat.widget.SearchView>
        <LinearLayout
            android:id="@+id/search_result_total"
            android:background="#eee"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <TextView
                android:paddingLeft="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Money to be received :"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/totalReceived_tv"
                android:paddingLeft="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:inputType="numberDecimal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/holo_blue_dark"/>
            <TextView
                android:paddingLeft="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Money to be paid :"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/totalPaid_tv"
                android:paddingLeft="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/holo_red_light"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/search_result_bill"
            android:background="#eee"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <TextView
                android:paddingLeft="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You RECEIVE :"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/totalReceived_tv_bill"
                android:paddingLeft="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:inputType="numberDecimal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/holo_blue_dark"/>
            <TextView
                android:paddingLeft="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You need to PAY :"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/totalPaid_tv_bill"
                android:paddingLeft="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/holo_red_light"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:padding="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv"
            tools:listitem="@layout/rv_layout">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
